    }

    @keyframes circularLoadIndicatorRotate {
        100% {
            transform: rotate(360deg);
        }
    }

    @keyframes circularLoadIndicatorDash {
        0% {
            stroke-dasharray: 1, 200;
            stroke-dashoffset: 0;
        }

        50% {
            stroke-dasharray: 89, 200;
